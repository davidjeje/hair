    <script>

        window.onload = () => {
          let calendarElt = document.querySelector('#calendar')
          let calendar = new FullCalendar.Calendar(calendarElt, {
            initialView: 'timeGridWeek',
            locale: 'fr',
            timeZone:'Europe/Paris',
            selectable: true,
            selectMirror: true,
            unselectAuto: true,
            headerToolbar:{
              start:'prev next today',
              center:'title',
              end:'dayGridMonth timeGridWeek'
            },
            slotMinTime:'8:00',
            slotMaxTime:'20:00',
            slotLabelInterval:'00:30',
            dateInfo:'end',
            height: 'auto',
            width: 'auto',
            titleFormat: { // will produce something like "Tuesday, September 18, 2018"
              month: '2-digit',
              year: 'numeric',
              day: '2-digit',
              hour: '2-digit',
              minute: '2-digit'
            },
            buttonText: {
              today:    'Aujourd\'hui',
              month:    'Mois',
              week:     'Semaine',
              day:      'Jour',
            },
            eventClick: function(info) {
              let result = confirm( "Vous souhaitez modifier ce RDV ?");
              if (result == true) {
                $.ajax({    
                  url : "{{ path('event_data_to_delete') }}",
                  type : 'GET', // Le type de la requête HTTP, ici devenu POST
                  data : {start: info.event.startStr, end: info.event.endStr },
                  //dataType : 'html'
                });
                window.location.replace("{{ path('event_success_delete') }}");
              }else{

              }
            },
            events:{{ datas|raw }}

          })
          
          calendar.render();
        }
    </script>
    
