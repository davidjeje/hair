{% extends 'base.html.twig' %}
{% block site1 %}
<div class="wrapper" style="background-image: url('{{ asset('images/bg-registration-form-2') }}');">
  <div class="inner">
    <form action="{{ path('login_or_registration') }}" method="post">
      {{form_start(form)}}
      <h3>Inscription</h3>
      <div class="form-group">
        <div class="form-wrapper">
          {{ form_label(form.name) }}
          {{ form_widget(form.name ) }} 
        </div>
        <div class="form-wrapper">
          {{ form_label(form.email) }}
          {{ form_widget(form.email ) }}
        </div>
      </div>
      <div class="form-wrapper">
        {{ form_label(form.number) }}
        {{ form_widget(form.number ) }}
      </div>
      <div class="form-wrapper">
        {{ form_label(form.password.first) }}
        {{ form_widget(form.password.first ) }}
      </div>
      <div class="form-wrapper">
        {{ form_label(form.password.second) }}
        {{ form_widget(form.password.second ) }}
      </div>
      <input type="hidden" name="token" value="{{ csrf_token('validateUser') }}"/>
          
      <div class="form-wrapper">
        <button>Connexion</button>
      </div>
      {{form_end(form)}}
    </form>
  </div>
</div>
{% endblock %}
{% block site2 %}{% endblock %}
