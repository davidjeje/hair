{% extends 'base.html.twig' %}
{% block site1 %}
<div class="wrapper" style="background-image: url('{{ asset('images/bg-registration-form-2') }}');">
      <div class="inner">
        <form action="{{ path('app_login') }}" method="post">
          <h3>Connexion</h3>
          <div class="form-group">
            <div class="form-wrapper">
              <label for="inputName">Name</label>
              <input type="text" value="{{ last_username }}" name="name" id="inputName"  class="form-control" required autofocus>
            </div>
            <div class="form-wrapper">
              <label for="inputPassword">Password</label>
              <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
          </div>
          <div class="form-wrapper">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox" id="remember_me" name="_remember_me">
              Se souvenir de moi 
              <span class="checkmark"></span>
            </label>
          </div>
          <br>
          <a href="{{ path('connectionLink') }}">Mot de passe oubli√©</a>
          <button>Connexion</button>
        </form>
      </div>
    </div>
{% endblock %}
